{% extends 'base.html.twig' %}

{% block title %}Accueil - Plateforme d'apprentissage{% endblock %}

{% block body %}
<div class="relative overflow-hidden">
    <!-- Fond décoratif -->
    <div class="absolute inset-0 z-0">
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-gradient-to-br from-blue-400/20 to-indigo-400/20 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-gradient-to-tr from-purple-400/20 to-pink-400/20 rounded-full blur-3xl"></div>
    </div>

    <!-- Contenu principal -->
    <div class="relative z-10">
        <!-- Hero Section -->
        <div class="px-4 py-16 sm:px-6 lg:px-8">
            <div class="max-w-7xl mx-auto">
                <div class="lg:grid lg:grid-cols-12 lg:gap-8">
                    <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
                        <div class="inline-flex items-center space-x-2 px-4 py-2 rounded-full bg-gradient-to-r from-blue-500/10 to-indigo-500/10 text-blue-600 mb-8">
                            <i class="fas fa-rocket"></i>
                            <span class="text-sm font-medium">Plateforme d'apprentissage</span>
                        </div>
                        <h1 class="mt-4 text-4xl tracking-tight font-extrabold text-slate-900 sm:mt-5 sm:text-6xl lg:mt-6">
                            <span class="block">Apprenez à</span>
                            <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">votre rythme</span>
                        </h1>
                        <p class="mt-3 text-base text-slate-500 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
                            Découvrez une nouvelle façon d'apprendre avec notre plateforme interactive. Accédez à des cours structurés, des exercices pratiques et suivez votre progression.
                        </p>
                        {% if not app.user %}
                            <div class="mt-8 sm:mt-12">
                                <div class="space-x-4">
                                    <a href="{{ path('app_register') }}" class="inline-flex items-center px-6 py-3 rounded-full text-base font-medium text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                                        <i class="fas fa-user-plus mr-2"></i>Commencer
                                    </a>
                                    <a href="{{ path('app_login') }}" class="inline-flex items-center px-6 py-3 border border-slate-300 rounded-full text-base font-medium text-slate-700 bg-white hover:bg-slate-50 hover:border-slate-400 transition-all">
                                        <i class="fas fa-sign-in-alt mr-2"></i>Se connecter
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center">
                        <div class="relative mx-auto w-full rounded-lg shadow-lg lg:max-w-md">
                            <div class="relative block w-full bg-white rounded-lg overflow-hidden">
                                <img class="w-full" src="https://placehold.co/600x400" alt="Learning illustration">
                                <div class="absolute inset-0 bg-gradient-to-tr from-blue-600/20 to-indigo-600/20 mix-blend-multiply"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                <!-- Statistiques Matières -->
                <div class="relative group">
                    <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
                    <div class="relative p-6 bg-white ring-1 ring-slate-200/50 rounded-xl">
                        <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                                <div class="p-3 bg-gradient-to-br from-blue-500/10 to-indigo-500/10 rounded-xl">
                                    <i class="fas fa-book text-2xl text-blue-600"></i>
                                </div>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-slate-900">{{ subjects|length }}</div>
                                <div class="text-sm font-medium text-slate-500">Matières</div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <a href="{{ path('app_subject_index') }}" class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500">
                                Explorer les matières
                                <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Statistiques Chapitres -->
                <div class="relative group">
                    <div class="absolute -inset-0.5 bg-gradient-to-r from-purple-600 to-pink-600 rounded-xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
                    <div class="relative p-6 bg-white ring-1 ring-slate-200/50 rounded-xl">
                        <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                                <div class="p-3 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-xl">
                                    <i class="fas fa-list-ul text-2xl text-purple-600"></i>
                                </div>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-slate-900">{{ chapters|length }}</div>
                                <div class="text-sm font-medium text-slate-500">Chapitres</div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <a href="{{ path('app_chapter_index') }}" class="inline-flex items-center text-sm font-medium text-purple-600 hover:text-purple-500">
                                Voir les chapitres
                                <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Statistiques Exercices -->
                <div class="relative group">
                    <div class="absolute -inset-0.5 bg-gradient-to-r from-amber-600 to-orange-600 rounded-xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
                    <div class="relative p-6 bg-white ring-1 ring-slate-200/50 rounded-xl">
                        <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                                <div class="p-3 bg-gradient-to-br from-amber-500/10 to-orange-500/10 rounded-xl">
                                    <i class="fas fa-tasks text-2xl text-amber-600"></i>
                                </div>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-slate-900">{{ exercises|length }}</div>
                                <div class="text-sm font-medium text-slate-500">Exercices</div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <a href="{{ path('app_exercise_index') }}" class="inline-flex items-center text-sm font-medium text-amber-600 hover:text-amber-500">
                                Découvrir les exercices
                                <i class="fas fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Content Section -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-12">
            <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
                <!-- Recent Subjects -->
                <div class="bg-white rounded-xl shadow-sm ring-1 ring-slate-200/50 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200/60">
                        <h3 class="text-lg font-semibold text-slate-900">
                            <i class="fas fa-star text-amber-400 mr-2"></i>
                            Dernières matières ajoutées
                        </h3>
                    </div>
                    <div class="divide-y divide-slate-200/60">
                        {% for subject in subjects|slice(0, 5) %}
                            <a href="{{ path('app_subject_show', {'id': subject.id}) }}" class="block px-6 py-4 hover:bg-slate-50 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <i class="fas fa-book text-blue-600 mr-3"></i>
                                        <span class="font-medium text-slate-900">{{ subject.name }}</span>
                                    </div>
                                    <div class="flex items-center">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            {{ subject.chapters|length }} chapitres
                                        </span>
                                        <i class="fas fa-chevron-right text-slate-400 ml-3"></i>
                                    </div>
                                </div>
                            </a>
                        {% else %}
                            <div class="px-6 py-8 text-center">
                                <i class="fas fa-info-circle text-slate-400 text-xl mb-2"></i>
                                <p class="text-slate-500">Aucune matière disponible</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Recent Exercises -->
                <div class="bg-white rounded-xl shadow-sm ring-1 ring-slate-200/50 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-200/60">
                        <h3 class="text-lg font-semibold text-slate-900">
                            <i class="fas fa-bolt text-amber-400 mr-2"></i>
                            Derniers exercices ajoutés
                        </h3>
                    </div>
                    <div class="divide-y divide-slate-200/60">
                        {% for exercise in exercises|slice(0, 5) %}
                            <a href="{{ path('app_exercise_show', {'id': exercise.id}) }}" class="block px-6 py-4 hover:bg-slate-50 transition-colors">
                                <div class="flex items-center justify-between mb-1">
                                    <h4 class="font-medium text-slate-900">{{ exercise.title }}</h4>
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-slate-100 text-slate-800">
                                        {{ exercise.chapter.subject.name }}
                                    </span>
                                </div>
                                <p class="text-sm text-slate-500 line-clamp-1">
                                    {{ exercise.description }}
                                </p>
                            </a>
                        {% else %}
                            <div class="px-6 py-8 text-center">
                                <i class="fas fa-info-circle text-slate-400 text-xl mb-2"></i>
                                <p class="text-slate-500">Aucun exercice disponible</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
