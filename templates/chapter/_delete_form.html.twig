<form method="post" action="{{ path('app_chapter_delete', {'id': chapter.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce chapitre et tous ses exercices associés ?');" class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
    <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
        <i class="fas fa-trash mr-2 -ml-0.5"></i>
        Supprimer
    </button>
</form>
