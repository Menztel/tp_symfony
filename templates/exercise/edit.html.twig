{% extends 'base.html.twig' %}

{% block title %}Modifier {{ exercise.title }}{% endblock %}

{% block body %}
<div class="relative min-h-screen overflow-hidden bg-slate-50/50">
    <!-- Fond décoratif -->
    <div class="absolute inset-0 z-0">
        <div class="absolute top-0 -right-96 w-[800px] h-[800px] bg-gradient-to-bl from-amber-50 to-orange-100/50 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-96 -left-96 w-[800px] h-[800px] bg-gradient-to-tr from-rose-50 to-red-100/50 rounded-full blur-3xl"></div>
    </div>

    <!-- Contenu principal -->
    <div class="relative z-10">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <!-- En-tête -->
            <div class="mb-8">
                <nav class="flex mb-8" aria-label="Breadcrumb">
                    <ol class="inline-flex items-center space-x-1 md:space-x-3">
                        <li class="inline-flex items-center">
                            <a href="{{ path('app_subject_index') }}" class="inline-flex items-center text-sm font-medium text-slate-700 hover:text-slate-900">
                                <i class="fas fa-book mr-2"></i>
                                Matières
                            </a>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <i class="fas fa-chevron-right text-slate-400 mx-2 text-sm"></i>
                                <a href="{{ path('app_subject_show', {'id': exercise.chapter.subject.id}) }}" class="text-sm font-medium text-slate-700 hover:text-slate-900">{{ exercise.chapter.subject.name }}</a>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <i class="fas fa-chevron-right text-slate-400 mx-2 text-sm"></i>
                                <a href="{{ path('app_chapter_show', {'id': exercise.chapter.id}) }}" class="text-sm font-medium text-slate-700 hover:text-slate-900">{{ exercise.chapter.title }}</a>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <i class="fas fa-chevron-right text-slate-400 mx-2 text-sm"></i>
                                <a href="{{ path('app_exercise_show', {'id': exercise.id}) }}" class="text-sm font-medium text-slate-700 hover:text-slate-900">{{ exercise.title }}</a>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <i class="fas fa-chevron-right text-slate-400 mx-2 text-sm"></i>
                                <span class="text-sm font-medium text-slate-500">Modifier</span>
                            </div>
                        </li>
                    </ol>
                </nav>

                <h2 class="text-3xl font-bold leading-7 text-slate-900 sm:truncate sm:tracking-tight mb-1">
                    Modifier {{ exercise.title }}
                </h2>
                <p class="text-sm text-slate-500">Dans {{ exercise.chapter.title }}</p>
            </div>

            <!-- Formulaire -->
            <div class="bg-white shadow-sm ring-1 ring-slate-700/5 rounded-xl">
                <div class="px-4 py-5 sm:p-6">
                    {{ include('exercise/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
