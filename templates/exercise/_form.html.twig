{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div>
        {{ form_label(form.title, 'Titre de l\'exercice', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
        <div class="mt-1">
            {{ form_widget(form.title, {'attr': {'class': 'block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'placeholder': 'Ex: TP1 - Introduction aux variables'}}) }}
        </div>
        {{ form_errors(form.title, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
    </div>

    <div>
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
        <div class="mt-1">
            {{ form_widget(form.description, {'attr': {'class': 'block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'rows': '4', 'placeholder': 'Description détaillée de l\'exercice...'}}) }}
        </div>
        {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
    </div>

    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
        <div>
            {{ form_label(form.difficulty, 'Difficulté', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
            <div class="mt-1">
                {{ form_widget(form.difficulty, {'attr': {'class': 'block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            </div>
            {{ form_errors(form.difficulty, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div>
            {{ form_label(form.chapter, 'Chapitre', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
            <div class="mt-1">
                {{ form_widget(form.chapter, {'attr': {'class': 'block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            </div>
            {{ form_errors(form.chapter, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>
    </div>

    <div class="flex justify-end space-x-3">
        <a href="{{ app.request.headers.get('referer') }}" class="inline-flex items-center px-4 py-2 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <i class="fas fa-times mr-2"></i>
            Annuler
        </a>
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
            <i class="fas fa-save mr-2"></i>
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
